.cart-content .cart-main .food-details {
  position: relative;
  display: flex;
  height: 200rpx;
  margin-top: 30rpx;
}
.cart-content .cart-main .food-details .food-image {
  width: 188rpx;
  height: 188rpx;
  border-radius: 10rpx;
  margin: 0 12rpx;
}
.cart-content .cart-main .food-details .food-price-box {
  flex: 1;
  height: 188rpx;
  position: relative;
}
.cart-content .cart-main .food-details .food-price-box .food-name {
  font-size: 32rpx;
}
.cart-content .cart-main .food-details .food-price-box .food-chkwrap {
  position: absolute;
  top: 6rpx;
  right: 6rpx;
}
.cart-content .cart-main .food-details .food-price-box .food-chkwrap .chk-wrap {
  transform: scale(0.7, 0.7);
}
.cart-content .cart-main .food-details .food-price-box .food-spicy .spicy-title {
  font-size: 28rpx;
}
.cart-content .cart-main .food-details .food-price-box .food-spicy .spicy-body {
  width: 320rpx;
}
.cart-content .cart-main .food-details .food-price-box .food-price {
  font-weight: 600;
  position: absolute;
  left: 0;
  bottom: 0;
}
.cart-content .cart-main .food-details .food-price-box .food-price:after {
  content: '/С╗й';
  color: #B8B8B8;
  font-size: 18rpx;
  font-weight: 400;
}
.cart-content .cart-main .food-details .food-price-box .cart_num_tool {
  display: flex;
  position: absolute;
  right: 12rpx;
  bottom: 0;
}
.cart-content .cart-main .food-details .food-price-box .cart_num_tool .num_edit {
  width: 42rpx;
  height: 42rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #FFCD28;
  border-radius: 50%;
}
.cart-content .cart-main .food-details .food-price-box .cart_num_tool .num_edit:last-child {
  border: 1rpx solid #ccc;
  background-color: #FFCD28;
}
.cart-content .cart-main .food-details .food-price-box .cart_num_tool .goods_num {
  width: 42rpx;
  height: 42rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-content .cart-main .price-total {
  position: relative;
  height: 120rpx;
  border-top: 1px solid #E9E9E9;
}
.cart-content .cart-main .price-total .all-chk-wrap {
  position: absolute;
  left: 12rpx;
  top: 50%;
  transform: translateY(-50%);
}
.cart-content .cart-main .price-total .all-chk-wrap .chk-wrap {
  font-size: 30rpx;
  transform: scale(0.8, 0.8);
}
.cart-content .cart-main .price-total .price-total-content {
  position: absolute;
  bottom: 0;
  right: 24rpx;
  height: 120rpx;
  line-height: 120rpx;
  color: #FF5C33;
  font-style: normal;
  font-size: 36rpx;
}
.cart-content .cart-main .price-total .price-total-content:after {
  content: ' Таи';
  color: #ccc;
  font-size: 26rpx;
  font-weight: 400;
  font-style: italic;
}
.cart-content .payfor-box {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 120rpx;
  width: 100%;
  box-shadow: 0 -3rpx 10rpx 3rpx #ccc;
  background-color: #fff;
}
.cart-content .payfor-box .payfor-price {
  flex: 1;
  padding-left: 24rpx;
  font-size: 36rpx;
  color: #FF5C33;
}
.cart-content .payfor-box .payfor-btn {
  flex: 1;
  display: flex;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  padding-right: 16rpx;
}
.cart-content .payfor-box .payfor-btn .btn-order {
  padding: 10rpx 0;
  width: 160rpx;
  border: 1px solid #ccc;
  border-radius: 20rpx;
  margin-right: 10rpx;
}
.cart-content .payfor-box .payfor-btn .btn-payfor {
  padding: 10rpx 0;
  width: 160rpx;
  border: 1px solid #ccc;
  border-radius: 20rpx;
  background-color: #FFCD28;
}
