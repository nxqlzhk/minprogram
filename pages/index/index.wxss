.index-whole .index-header {
  position: relative;
}
.index-whole .index-header .index-numOrder {
  font-size: 30rpx;
  color: #BA7418;
  position: absolute;
  bottom: 12%;
  right: 10%;
  z-index: 999;
}
.index-whole .index-banner .banner-title {
  margin: 20rpx 0;
}
.index-whole .index-banner .banner-title text {
  color: var(--themeColor);
}
.index-whole .index-banner .banner-content {
  white-space: nowrap;
  display: flex;
}
.index-whole .index-banner .banner-content .content-view {
  overflow: hidden;
  margin: 10rpx 10rpx;
  display: inline-block;
  width: 330rpx;
  height: 400rpx;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 6rpx 6rpx 6rpx rgba(0, 2, 2, 0.3);
}
.index-whole .index-banner .banner-content .content-view .info-image {
  width: 100%;
  height: 250rpx;
}
.index-whole .index-banner .banner-content .content-view .info-name {
  font-size: 32rpx;
  text-align: left;
  margin: 20rpx;
}
.index-whole .index-banner .banner-content .content-view .info-price {
  display: flex;
}
.index-whole .index-banner .banner-content .content-view .info-price .price {
  flex: 1;
  font-size: 28rpx;
  text-align: left;
  margin-left: 20rpx;
}
.index-whole .index-banner .banner-content .content-view .info-price .cart {
  width: 46rpx;
  height: 46rpx;
  line-height: 46rpx;
  margin-right: 4rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #FFCD28;
}
.index-whole .index-footer {
  border-top: 1px solid #F2F2F2;
  padding-top: 10rpx;
  display: flex;
}
.index-whole .index-footer .footer-left {
  padding-top: 24rpx;
  flex: 1;
}
.index-whole .index-footer .footer-left .left-sort {
  width: 156rpx;
  height: 56rpx;
  line-height: 56rpx;
  color: #777777;
  font-size: 26rpx;
  font-weight: 520;
  text-align: center;
  margin: 36rpx 0;
}
.index-whole .index-footer .footer-left .left-sort:first-child {
  margin-top: 120rpx;
}
.index-whole .index-footer .footer-right {
  flex: 3;
}
.index-whole .index-footer .footer-right .right-title {
  font-size: 30rpx;
  font-weight: 900;
  color: #6B6B6B;
  text-align: center;
  margin: 50rpx;
}
.index-whole .index-footer .footer-right .right-content {
  display: flex;
  margin: 20rpx 10rpx;
  height: 200rpx;
}
.index-whole .index-footer .footer-right .right-content .right-image {
  margin: 6rpx;
  width: 188rpx;
  height: 188rpx;
  border-radius: 10rpx;
}
.index-whole .index-footer .footer-right .right-content .right-price {
  flex: 1;
  margin: 6rpx;
  width: 188rpx;
  height: 188rpx;
  border-radius: 10rpx;
  position: relative;
}
.index-whole .index-footer .footer-right .right-content .right-price .price-name {
  font-size: 32rpx;
}
.index-whole .index-footer .footer-right .right-content .right-price .price-sale {
  font-size: 22rpx;
  color: #B8B8B8;
}
.index-whole .index-footer .footer-right .right-content .right-price .price-price {
  font-weight: 600;
  position: absolute;
  left: 0;
  bottom: 0;
}
.index-whole .index-footer .footer-right .right-content .right-price .price-price:after {
  content: '/份 起';
  color: #B8B8B8;
  font-size: 18rpx;
  font-weight: 400;
}
.index-whole .index-footer .footer-right .right-content .right-price .price-selected {
  position: absolute;
  right: 2rpx;
  bottom: 0;
  width: 80rpx;
  height: 38rpx;
  line-height: 38rpx;
  font-size: 22rpx;
  text-align: center;
  border-radius: 20rpx;
  background-color: #FFCD28;
}
.active {
  color: #000 !important;
  border-left: 4px solid #FFCD28;
}
