/* 引入字体图标 */
@import "styles/iconfont.wxss";
/* 在微信小程序中 不支持通配符选择器 */
page,view,text,swiper,swiper-item,image,navigator{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 主题颜色通过变量来实现   color:var(--themeColor)*/
page{
  /* 定义主题颜色 */
  --themeColor: #eb4450;
  /* 字体大小根据设计稿来设置 */
  font-size: 28rpx;
}
image {
  width: 100%;
}
  /* scroll-view标签隐藏滚动条 */
scroll-view::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}