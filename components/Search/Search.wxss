.search-components {
  position: relative;
}
.search-components .search-box {
  height: 120rpx;
  padding: 20rpx;
  background-color: #EDEDEC;
}
.search-components .search-box .search-center {
  position: relative;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50rpx;
}
.search-components .search-box .search-center .s-icon {
  font-size: 36rpx;
  position: absolute;
  left: 18rpx;
  top: 50%;
  transform: translateY(-50%);
}
.search-components .search-box .search-center .s-input {
  position: absolute;
  left: 62rpx;
  top: 50%;
  transform: translateY(-50%);
}
.search-components .food-details {
  position: relative;
  display: flex;
  height: 200rpx;
  margin-top: 30rpx;
}
.search-components .food-details .food-image {
  width: 188rpx;
  height: 188rpx;
  border-radius: 10rpx;
  margin: 0 12rpx;
}
.search-components .food-details .food-price-box {
  flex: 1;
  height: 188rpx;
  position: relative;
}
.search-components .food-details .food-price-box .food-name {
  font-size: 32rpx;
}
.search-components .food-details .food-price-box .food-sale {
  font-size: 22rpx;
  color: #B8B8B8;
}
.search-components .food-details .food-price-box .food-price {
  font-weight: 600;
  position: absolute;
  left: 0;
  bottom: 0;
}
.search-components .food-details .food-price-box .food-price:after {
  content: '/份 起';
  color: #B8B8B8;
  font-size: 18rpx;
  font-weight: 400;
}
.search-components .food-details .food-price-box .food-selected {
  position: absolute;
  right: 18rpx;
  bottom: 0;
  width: 80rpx;
  height: 38rpx;
  line-height: 38rpx;
  font-size: 22rpx;
  text-align: center;
  border-radius: 20rpx;
  background-color: #FFCD28;
}
.search-components .no-found {
  position: absolute;
  top: 520rpx;
  left: 50%;
  transform: translateX(-50%);
  height: 30rpx;
  width: 180px;
  color: #6B6B6B;
}
